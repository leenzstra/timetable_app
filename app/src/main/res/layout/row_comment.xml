<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout android:id="@+id/linearComment"
    android:layout_gravity="top|start"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10pxv"
    android:layout_width="match_parent"
    android:orientation="vertical" style="@style/groupStylewhite_1">
    <LinearLayout android:gravity="start"
        android:id="@+id/linearRowvectorOne"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10pxh"
        android:layout_marginStart="@dimen/_10pxh"
        android:layout_marginTop="@dimen/_10pxv"
        android:layout_width="wrap_content" android:orientation="horizontal">
        <ImageView android:id="@+id/imageVectorOne"
            android:layout_height="@dimen/_18pxh"
            android:layout_width="@dimen/_19pxh"
            android:scaleType="fitXY"
            android:src="@drawable/img_vector_black_900"
            tools:ignore="ContentDescription" tools:src="@drawable/img_vector_black_900"/>
        <TextView android:ellipsize="end"
            android:id="@+id/markTV"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_1pxv"
            android:layout_marginStart="@dimen/_6pxh"
            android:layout_marginTop="@dimen/_3pxv"
            android:layout_weight="0.59"
            android:layout_width="0dp"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="@dimen/_1pxh"
            android:singleLine="true"
            android:text="@{teacherinfopageVM.teacherinfopageModel.txtFourHundredSixtySevenOne}"
            style="@style/txtRobotoromanbold14" tools:text="@string/lbl_4_67"/>
    </LinearLayout>
    <TextView
        android:id="@+id/commentSection"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_13pxv"
        android:layout_marginEnd="@dimen/_10pxh"
        android:layout_marginStart="@dimen/_8pxh"
        android:layout_marginTop="@dimen/_17pxv"
        android:layout_width="match_parent"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="@dimen/_11pxh"
        android:text="@{teacherinfopageVM.teacherinfopageModel.txtDescription}"
        style="@style/txtRobotoregular13" tools:text="@string/msg_lorem_ipsum_dol"/>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>